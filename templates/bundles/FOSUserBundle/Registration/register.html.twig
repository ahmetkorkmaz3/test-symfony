{% extends "base.html.twig" %}

{% block body %}

{{ form_start(form) }}
    {% if form_errors(form) %}
    <div class="alert alert-danger" role="alert">
        {{ form_errors(form) }}
    </div>
    {% endif %}
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-4">
                {{ form_row(form.username, {'attr': {'class': 'form-control'}} ) }}
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(form.plainPassword.first, { 'attr': {'class': 'form-control'}, 'label': 'Parola' }) }}
                {{ form_row(form.plainPassword.second, { 'attr': {'class': 'form-control'}, 'label': 'Parola Tekrar' }) }}
                <input type="submit" class="btn btn-primary mt-2" value="KayÄ±t Ol" />
            </div>
        </div>
    </div>
{{ form_end(form) }}

{% endblock %}